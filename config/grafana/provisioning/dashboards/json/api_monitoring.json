{
  "title": "API Monitoring Dashboard",
  "tags": ["api", "monitoring", "logs"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 5,
  "refresh": "5s",
  "panels": [
    {
      "type": "timeseries",
      "title": "Request Rate by HTTP Method",
      "targets": [
        {
          "expr": "sum by (method) (http_requests_total)",
          "legendFormat": "{{method}}",
          "refId": "A",
          "datasource": "Prometheus"
        }
      ],
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 },
      "options": {
        "legend": {
          "showLegend": true,
          "displayMode": "list"
        }
      },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "lineInterpolation": "linear",
            "spanNulls": false
          }
        }
      }
    },
    {
      "type": "timeseries",
      "title": "Requests per Endpoint",
      "targets": [
        {
          "expr": "sum by (endpoint) (http_requests_total)",
          "legendFormat": "{{endpoint}}",
          "refId": "A",
          "datasource": "Prometheus"
        }
      ],
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 },
      "options": {
        "legend": {
          "showLegend": true,
          "displayMode": "list"
        }
      },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "lineInterpolation": "linear",
            "spanNulls": false
          }
        }
      }
    },
    {
      "type": "timeseries",
      "title": "Error Rate (Non-2xx)",
      "targets": [
        {
          "expr": "sum by (status) (http_requests_total{status!~\"2..\"})",
          "legendFormat": "{{status}}",
          "refId": "A",
          "datasource": "Prometheus"
        }
      ],
      "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 },
      "options": {
        "legend": {
          "showLegend": true,
          "displayMode": "list"
        }
      },
      "fieldConfig": {
        "defaults": {
          "custom": {
            "lineInterpolation": "linear",
            "spanNulls": false
          }
        }
      }
    },
    {
      "type": "gauge",
      "title": "Error Rate Percentage",
      "targets": [
        {
          "expr": "(sum(http_requests_total{status!~\"2..\"}) / sum(http_requests_total)) * 100",
          "refId": "A",
          "datasource": "Prometheus"
        }
      ],
      "gridPos": { "x": 12, "y": 8, "w": 12, "h": 8 },
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": "",
          "values": false
        },
        "showThresholdLabels": true,
        "showThresholdMarkers": true
      },
      "fieldConfig": {
        "defaults": {
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 3 },
              { "color": "red", "value": 5 }
            ]
          }
        }
      }
    },
    {
      "type": "logs",
      "title": "API Logs",
      "gridPos": { "x": 0, "y": 16, "w": 24, "h": 15 },
      "targets": [
        {
          "expr": "{job=\"api\"}",
          "refId": "A",
          "datasource": "Loki"
        }
      ],
      "options": {
        "showLabels": true,
        "wrapLogMessage": true,
        "enableLogDetails": true,
        "prettifyLogMessage": false,
        "showCommonLabels": false,
        "showTime": true,
        "sortOrder": "Descending",
        "dedupStrategy": "none"
      }
    }
  ],
  "annotations": {
    "list": [
      {
        "builtIn": 1,
        "type": "dashboard",
        "name": "Annotations & Alerts",
        "enable": true,
        "iconColor": "rgba(255, 96, 96, 1)"
      }
    ]
  },
  "templating": {
    "list": []
  },
  "time": {
    "from": "now-15m",
    "to": "now"
  }
}
